<%= form_for @picture, url: ad_pic_path(@picture), html: {id: "crop-box"}, remote: true  do |f|%>
	<div class="form-group">
		<%= image_tag(@picture.image.url, id: "crop-image") %>
		<%= f.hidden_field :unique_key %>
		<% ["crop_x", "crop_y"].each do |arg| %>
			<%= f.hidden_field "#{arg}", id: "#{arg.sub('_', '-')}"%>
		<% end %>	
	</div>
	<div class="form-group">
		<%= button_tag "Crop image", class: "btn btn-success btn-lg" %>
	</div>
<% end %>